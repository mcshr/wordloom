<?xml version="1.0" encoding="utf-8"?>
<resources>


<!-- TEXT   -->

    <style name="text">
        <item name="fontFamily">sans-serif</item>
        <item name="android:textColor">@color/text87</item>
    </style>

    <style name="text.appbar">
        <item name="android:textSize">22sp</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>


    <style name="text.title">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="text.title.learning">
        <item name="android:textColor">@color/learning_status</item>
    </style>
    <style name="text.title.learned">
        <item name="android:textColor">@color/learned_status</item>
    </style>


    <style name="text.title.large">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="text.title.medium">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="text.title.small">
        <item name="android:textSize">16sp</item>
    </style>


    <style name="text.body">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="text.body.medium">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="text.body.large">
        <item name="android:textSize">18sp</item>
    </style>
    <style name="text.body.learning">
        <item name="android:textColor">@color/learning_status</item>
    </style>
    <style name="text.body.learned">
        <item name="android:textColor">@color/learned_status</item>
    </style>


    <style name="text.caption">
        <item name="android:textColor">@color/text60</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="text.caption.small">
        <item name="android:textSize">12sp</item>
    </style>


    <style name="text.partOfSpeech">
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/bg_part_of_speech</item>
        <item name="android:textColor">@color/text60</item>
    </style>

    <style name="text.status">
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/bg_word_status</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

<!--BOTTOM NAVIGATION -->

    <style name="WordloomBottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="backgroundTint">@color/transparent</item>
        <item name="android:background">@drawable/bottom_nav_background</item>

        <item name="elevation">0dp</item>
        <item name="android:elevation">0dp</item>

        <item name="android:minHeight">64dp</item>
        <item name="itemPaddingTop">12dp</item>
        <item name="itemPaddingBottom">12dp</item>
        <item name="itemActiveIndicatorStyle">@style/ActiveIndicator.transparent</item>
    </style>

    <style name="ActiveIndicator.transparent" parent="Widget.Material3.BottomNavigationView">
        <item name="android:color">@color/transparent</item>
    </style>


<!-- EDIT TEXT   -->
    
    <style name="WordloomTextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
    </style>
    <style name="WordloomTextInputEditText" parent="Widget.Material3.TextInputEditText.OutlinedBox">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">11dp</item>
    </style>

    <style name="WordloomExposedDropdownMenu" parent="Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="hintTextAppearance">@style/text.body</item>
<!--        <item name="boxStrokeWidth">0dp</item>-->
    </style>

    <style name="WordloomAutocompleteTextView" parent="Widget.Material3.AutoCompleteTextView.OutlinedBox">
        <item name="android:paddingTop">13dp</item>
        <item name="android:paddingBottom">13dp</item>
        <item name="android:inputType">none</item>
    </style>

<!-- FAB   -->

    <style name="WordloomFAB" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="backgroundTint">@color/black</item>
        <item name="tint">@color/white</item>
        <item name="shapeAppearance">@style/roundShape</item>
        <item name="elevation">2dp</item>
    </style>
    <style name="roundShape" parent="ShapeAppearance.Material3.Corner.Large">
        <item name="cornerSize">50%</item>
    </style>


    <!-- SEARCH BAR  -->

    <style name="WordloomSearchBar" parent="Widget.Material3.SearchBar.Outlined">
        <item name="shapeAppearanceOverlay">@style/cardShape</item>
    </style>
    <style name="cardShape" parent="ShapeAppearance.Material3.Corner.Large">
        <item name="android:backgroundTint">@color/white</item>
        <item name="cornerSize">@dimen/corner_radius</item>
    </style>


    <!-- ICON BUTTON  -->

    <style name="WordloomIcon" parent ="Widget.Material3.Button.IconButton">
        <item name="iconTint">@color/text87</item>
    </style>

    <style name="WordloomIconBig" parent="Widget.Material3.Button.IconButton.Outlined">
        <item name="android:padding">20dp</item>
        <item name="shapeAppearance">@style/cardShape</item>
        <item name="iconSize">30dp</item>
        <item name="strokeColor">@color/text60</item>
        <item name="strokeWidth">1dp</item>
        <item name="iconTint">@color/text87</item>
    </style>

    <style name="WordloomIconOutlined" parent ="Widget.Material3.Button.IconButton.Outlined">
        <item name="iconTint">@color/icon_button_outlined_color</item>
        <item name="android:insetTop">5dp</item>
        <item name="shapeAppearance">@style/cardShape</item>
        <item name="android:insetBottom">1dp</item>
    </style>


    <!-- BUTTON  -->

    <style name="WordloomButton" parent="Widget.Material3.Button">
        <item name="android:paddingStart">32dp</item>
        <item name="android:paddingEnd">32dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="backgroundTint">@color/black</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="android:textSize">19sp</item>
    </style>
    <style name="WordloomButton.small" >
        <item name="android:minHeight">40dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="backgroundTint">@color/transparent</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="WordloomButton.Option">
        <item name="android:textAppearance">@style/text.title.small</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/text87</item>
        <item name="android:padding">8dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetLeft">0dp</item>
    </style>
    <style name="WordloomButton.Option.Outlined">
        <item name="android:textColor">@color/text87</item>
        <item name="backgroundTint">@color/transparent</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">@color/text87</item>
    </style>


    <style name="WordloomTextButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:textSize">16sp</item>
    </style>


    <!-- BOTTOM_SHEET_DIALOG -->

    <style name="WordloomBottomSheetDialog" parent="Theme.Material3.DayNight.BottomSheetDialog">
        <item name="behavior_draggable">false</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
    </style>


    <!-- TOOLBAR -->

    <style name="WordloomToolbar" parent="Widget.Material3.Toolbar">
        <item name="titleTextAppearance">@style/text.appbar</item>
        <item name="android:actionMenuTextAppearance">@style/text.title</item>
        <item name="subtitleTextAppearance">@style/text.caption</item>
    </style>
    <style name="WordloomToolbar.Centered" parent="Widget.Material3.Toolbar">
        <item name="titleTextAppearance">@style/text.title</item>
        <item name="titleCentered">true</item>
        <item name="subtitleCentered">true</item>
    </style>
    
    
    <style name="WordloomSlider" parent="Widget.Material3.Slider">
        <item name="trackHeight">8dp</item>
        <item name="thumbHeight">24dp</item>
        <item name="android:itemPadding">0dp</item>

    </style>

    <!-- DIALOG_FRAGMENT -->
    <style name="WordloomDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="android:windowBackground"> @drawable/card_without_border </item>
    </style>

</resources>